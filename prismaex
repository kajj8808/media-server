// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                  Int                   @id @default(autoincrement())
  email               String                @unique
  name                String?
  UserEpisodeProgress UserEpisodeProgress[]
}

model Series {
  id           Int           @id @default(autoincrement())
  title        String        @unique
  thumbnail    String
  logo         String?
  coverImage   String
  createAt     DateTime      @default(now())
  updateAt     DateTime      @updatedAt()
  genre        String?
  description  String        @db.Text
  isMovie      Boolean? // 영화인지 여부
  releaseDate  DateTime // 실제 방영 날짜
  PlaybackInfo PlaybackInfo?
  seasons      Season[]
  episodes     Episode[]
}

model PlaybackInfo {
  id         Int     @id @default(autoincrement())
  quality    String
  isSubtitle Boolean
  seriesId   Int     @unique
  series     Series  @relation(fields: [seriesId], references: [id])
}

model Season {
  id       Int       @id @default(autoincrement())
  name     String
  episodes Episode[]
  seriesId Int
  series   Series    @relation(fields: [seriesId], references: [id])
}

model Episode {
  id          Int                   @id @default(autoincrement())
  thumnail    String
  title       String
  description String                @db.Text
  runningTime Int
  smi         String?
  episode     Int
  videoId     String
  opStart     Int?
  opEnd       Int?
  edStart     Int?
  edEnd       Int?
  viewers     UserEpisodeProgress[]
  Season      Season                @relation(fields: [seasonId], references: [id])
  seasonId    Int
  Series      Series?               @relation(fields: [seriesId], references: [id])
  seriesId    Int?
}

model UserEpisodeProgress {
  id        Int     @id @default(autoincrement())
  userId    Int
  episodeId Int
  watchMs   Int
  user      User    @relation(fields: [userId], references: [id])
  episode   Episode @relation(fields: [episodeId], references: [id])
}
